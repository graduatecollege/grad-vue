{
    "name": "@illinois-grad/grad-vue-rte",
    "version": "1.0.0",
    "description": "Rich text editor components for Graduate College apps using Tiptap.",
    "keywords": [
        "vue",
        "vue3",
        "components",
        "graduate-college",
        "rich-text",
        "tiptap"
    ],
    "author": "University of Illinois Graduate College",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/graduatecollege/grad-vue.git"
    },
    "type": "module",
    "main": "./dist/grad-vue-rte.js",
    "module": "./dist/grad-vue-rte.js",
    "exports": {
