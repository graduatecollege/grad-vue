        "@tiptap/extension-list": "^3.4.0",
        "@tiptap/extension-paragraph": "^3.4.0",
        "@tiptap/extension-placeholder": "^3.4.0",
        "@tiptap/extension-text": "^3.4.0",
        "@tiptap/extensions": "^3.4.0",
        "@tiptap/vue-3": "^3.4.0",
        "vue": "^3.5"
