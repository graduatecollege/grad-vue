{
    "name": "@illinois-grad/grad-vue",
    "version": "0.1.0",
    "description": "Shared Vue.js components for Graduate College apps.",
    "keywords": [
        "vue",
        "vue3",
        "components",
        "graduate-college"
    ],
    "author": "University of Illinois Graduate College",
    "license": "MIT",
    "repository": "github:graduatecollege/grad-vue",
    "type": "module",
    "main": "./dist/grad-vue.js",
    "module": "./dist/grad-vue.js",
    "exports": {
        ".": {
            "import": "./dist/grad-vue.js"
        },
        "./grad-vue.css": {
            "import": "./dist/grad-vue.css"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite playground",
        "build": "vite build && vue-tsc --emitDeclarationOnly",
        "watch": "vue-tsc --watch & vite build --watch",
        "preview": "vite preview",
        "test": "vitest",
        "test:run": "vitest run && node --experimental-strip-types scripts/transform-test-results.ts"
    },
    "dependencies": {
        "@vueuse/core": "^14",
        "@vueuse/integrations": "^14",
        "focus-trap": "^7",
        "vue": "^3.5"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "pinia": "^3.0.4",
        "@types/node": "^24.10.3",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/browser": "^4.0.16",
        "@vitest/browser-playwright": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "@vue/test-utils": "^2.4.6",
        "axe-core": "^4.11.0",
        "happy-dom": "^20.0.11",
        "jsdom": "^27.3.0",
        "playwright": "^1.57.0",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "vite": "^7.2.7",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-vue-devtools": "^8.0.5",
        "vitest": "^4.0.16",
        "vue-tsc": "^3.1.8"
    }
}
