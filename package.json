{
    "name": "@illinois-grad/grad-vue",
    "version": "1.0.0",
    "description": "Shared Vue.js components for Graduate College apps.",
    "keywords": [
        "vue",
        "vue3",
        "components",
        "graduate-college"
    ],
    "author": "University of Illinois Graduate College",
    "license": "MIT",
    "repository": "github:graduatecollege/grad-vue",
    "type": "module",
    "main": "./dist/grad-vue.js",
    "module": "./dist/grad-vue.js",
    "exports": {
        ".": {
            "import": "./dist/grad-vue.js"
        },
        "./grad-vue.css": {
            "import": "./dist/grad-vue.css"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite playground",
        "build": "vite build && vue-tsc --emitDeclarationOnly",
        "watch": "vue-tsc --watch & vite build --watch",
        "preview": "vite preview",
        "test": "vitest run --browser.headless",
        "test:ui": "vitest",
        "test:run": "vitest run --browser.headless && node --experimental-strip-types scripts/transform-test-results.ts",
        "component:new": "node --experimental-strip-types scripts/bootstrap-component.ts",
        "sync-props": "node --experimental-strip-types scripts/sync-props-config.ts"
    },
    "dependencies": {
        "@vueuse/core": "^14",
        "@vueuse/integrations": "^14",
        "focus-trap": "^7",
        "vue": "^3.5"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@types/node": "^24.10.3",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/browser": "^4.0.17",
        "@vitest/browser-playwright": "^4.0.17",
        "@vitest/ui": "^4.0.17",
        "axe-core": "^4.11.1",
        "happy-dom": "^20.3.2",
        "jsdom": "^27.4.0",
        "pinia": "^3.0.4",
        "playwright": "^1.57.0",
        "prettier": "^3.8.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-vue-devtools": "^8.0.5",
        "vitest": "^4.0.17",
        "vitest-browser-vue": "^2.0.1",
        "vue-tsc": "^3.2.2",
        "marked": "^17.0.1",
        "marked-alert": "^2.1.2",
        "marked-shiki": "^1.2.1",
        "shiki": "^3.21.0"
    }
}
